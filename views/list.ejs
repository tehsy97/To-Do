
<%- include("header") -%>
    <div class="box-button">
            <button type="submit" name="list" value="<%= listTitle %>" class="btn btn-secondary">
                <a href="/showLists">Show / Delete To-Do Lists</a>
            </button>
    </div>

    <div class="box">
        <% newListItems.forEach(item => { %>
            <form action="/delete" method="POST" >
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= item._id%>" onchange="this.form.submit()">
                    <p><%= item.name %></p>
                </div>
                <input type="hidden" name="listName" class="newList" placeholder="Add New ToDo List" value="<%= listTitle %>"></input>
            </form>
        <% }) %>
        
        <form class="item" action="/" method="POST">
            <input type="text" name="newItem" class="newItemInput" placeholder="New Item" autocomplete="off"></input>
            <button type="submit" name="list" value="<%= listTitle %>" class="btn-addNew">+</button>
        </form>
    </div>

<%- include("footer") -%>